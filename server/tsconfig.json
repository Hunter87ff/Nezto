{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "rootDir": "src",
        "outDir": "./dist",
        "esModuleInterop": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@routes/*": ["src/routes/*"],
            "@controllers/*": ["src/controllers/*"],
            "@utils/*": ["src/utils/*"],

        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "typings/*",
        "node_modules"
    ],
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    }
}