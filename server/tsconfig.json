{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
        "paths": {
            "@/*": ["./*"],
            "@routes/*": ["routes/*"],
            "@controllers/*": ["controllers/*"],
            "@utils/*": ["utils/*"],
            "@events/*": ["core/events/*"],
            "@core/*": ["core/*"],
            "@models/*": ["models/*"]
        }
    },
    "include": [
        "src"
    ]
}